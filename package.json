{
  "name": "afk-companion",
  "version": "0.6.0",
  "description": "AFK Companion - Anti-idle utility to prevent being marked as away",
  "main": "dist-ts/main.js",
  "scripts": {
    "start": "npm run build:ts && electron .",
    "start:dev": "nodemon --exec \"npm run build:ts && electron .\" --watch src --ext ts,js",
    "build:ts": "tsc",
    "build:ts:watch": "tsc --watch",
    "build": "npm run build:ts && electron-builder",
    "build:win": "npm run build:ts && electron-builder --win",
    "build:linux": "npm run build:ts && electron-builder --linux",
    "dist": "npm run build:ts && electron-builder --publish=never",
    "clean": "rimraf dist-ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "electron",
    "afk",
    "anti-idle",
    "gaming",
    "utility"
  ],
  "author": "ArtyProf",
  "license": "MIT",
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/node": "^24.6.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "build": {
    "appId": "com.artyprof.afk-companion",
    "productName": "AFK Companion",
    "directories": {
      "output": "dist"
    },
    "icon": "assets/icon.png",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "publisherName": "ArtyProf",
      "signAndEditExecutable": false,
      "sign": null,
      "artifactName": "afk-companion.exe"
    },
    "linux": {
      "target": [
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Utility",
      "executableName": "afk-companion"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ]
  },
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.6"
  }
}
