{
  "name": "afk-companion",
  "version": "1.1.1",
  "description": "AFK Companion - Anti-idle utility to prevent being marked as away",
  "main": "dist-ts/main.js",
  "scripts": {
    "start": "npm run build:ts && electron .",
    "start:debug": "npm run build:ts && electron . --enable-logs",
    "start:dev": "nodemon --exec \"npm run build:ts && electron .\" --watch src --ext ts,js",
    "build:ts": "tsc",
    "build:ts:watch": "tsc --watch",
    "build": "electron-builder",
    "build:win": "npm run build:ts && electron-builder --win",
    "build:linux": "npm run build:ts && electron-builder --linux",
    "build:mac": "npm run build:ts && electron-builder --mac",
    "dist": "electron-builder --publish=never",
    "clean": "rimraf dist-ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "electron",
    "afk",
    "anti-idle",
    "gaming",
    "utility"
  ],
  "author": "ArtyProf",
  "license": "MIT",
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/node": "^24.6.2",
    "electron": "^38.2.1",
    "electron-builder": "^24.6.4",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "build": {
    "appId": "com.artyprof.afk-companion",
    "productName": "afk-companion",
    "directories": {
      "output": "dist"
    },
    "icon": "assets/icon.ico",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "ArtyProf",
      "signAndEditExecutable": false,
      "sign": null,
      "artifactName": "afk-companion.exe"
    },
    "linux": {
      "target": [
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Utility",
      "executableName": "afk-companion",
      "synopsis": "Anti-idle utility to prevent being marked as away",
      "description": "AFK Companion helps prevent your system from going idle during gaming or other activities by simulating mouse movements at specified intervals."
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities",
      "darkModeSupport": true,
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "identity": null,
      "entitlements": "buildconfig/entitlements.mac.plist",
      "entitlementsInherit": "buildconfig/entitlements.mac.plist",
      "artifactName": "afk-companion-${version}-${arch}.${ext}",
      "executableName": "afk-companion",
      "extendInfo": {
        "CFBundleIdentifier": "com.artyprof.afk-companion",
        "CFBundleName": "AFK Companion",
        "NSAppleEventsUsageDescription": "AFK Companion needs to simulate mouse and keyboard events to prevent system idle.",
        "NSAccessibilityUsageDescription": "AFK Companion needs accessibility access to simulate mouse movements and keyboard events.",
        "LSApplicationCategoryType": "public.app-category.utilities"
      }
    },
    "dmg": {
      "writeUpdateInfo": false
    },
    "files": [
      "dist-ts/**/*",
      "index.html",
      "styles/**/*",
      "assets/**/*",
      "package.json",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!src/**/*",
      "!*.ts",
      "!tsconfig.json"
    ]
  },
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.6",
    "steamworks.js": "^0.4.0"
  }
}
